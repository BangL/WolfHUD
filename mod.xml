<table
		name="WolfgangHUD"
		description="This is a Mod Collection of HUD altering scripts, as well as quality of life changes to the game and its menus."
		merge_global="false"
		priority="1"
		author="BangL"
		cannot_be_disabled="false"
		min_blt_version="1.33"
		early_init="false">

	<auto_updates
			provider="modworkshop"
			id="24551"
			version="1.0"/>

	<hooks>

		<!-- WolfgangHUD -->
		<hook source_file="lib/entry"											file="core/WolfgangHUD.lua"		type="pre"	/>

		<!-- Menu -->
		<hook source_file="lib/managers/menu/menucomponentmanager"				file="core/WolfgangHUDMenu.lua"				/>

		<!-- GameInfoManager -->
		<hook source_file="lib/setups/setup"									file="core/GameInfoManager.lua"				/>
		<hook source_file="lib/managers/enemymanager"							file="core/GameInfoManager.lua"				/>


		<!-- NoAds -->
		<hook source_file="lib/managers/menu/raid_menu/raidmainmenugui"			file="modules/NoAds.lua"					/>

		<!-- HUDList -->
		<hook source_file="lib/managers/hudmanagerpd2"							file="modules/HUDList.lua"					/>

		<!-- KillCounter -->
		<hook source_file="lib/managers/hudmanagerpd2"							file="modules/KillCounter.lua"				/>
		<hook source_file="lib/managers/raidjobmanager"							file="modules/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammatebase"					file="modules/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammateai"						file="modules/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammatepeer"					file="modules/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammateplayer"					file="modules/KillCounter.lua"				/>
		<hook source_file="lib/units/enemies/cop/copdamage"						file="modules/KillCounter.lua"				/>
		<hook source_file="lib/units/equipment/sentry_gun/sentrygunbase"		file="modules/KillCounter.lua"				/>

		<!-- Accuracy -->
		<hook source_file="lib/managers/hudmanagerpd2"							file="modules/Accuracy.lua"					/>
		<hook source_file="lib/managers/raidjobmanager"							file="modules/Accuracy.lua"					/>
		<hook source_file="lib/managers/statisticsmanager"						file="modules/Accuracy.lua"					/>
		<hook source_file="lib/managers/hud/hudteammateplayer"					file="modules/Accuracy.lua"					/>

		<!-- Ready On Num Enter -->
		<hook source_file="lib/managers/hud/hudchat"							file="modules/ReadyOnNumEnter.lua"			/>


		<!-- NoSlowMo -->
		<hook source_file="lib/tweak_data/timespeedeffecttweakdata"				file="modules/NoSlowMo.lua"					/>

		<!-- Transparent Pause Menu -->
		<hook source_file="lib/managers/menu/raid_menu/raidmenuscenemanager"	file="modules/TransparentPauseMenu.lua"		/>

		<!-- Auto Reload -->
		<hook source_file="lib/units/beings/player/states/playerstandard"		file="modules/AutoReload.lua"				/>

		<!-- Straight To Main Menu -->
		<hook source_file="lib/setups/menusetup"								file="modules/StraightToMainMenu.lua"		/>
		<hook source_file="lib/states/menutitlescreenstate"						file="modules/StraightToMainMenu.lua"		/>

		<!-- Instant Restart -->
		<hook source_file="lib/tweak_data/tweakdata"							file="modules/InstantRestart.lua"			/>

		<!-- Kick a Friend -->
		<hook source_file="lib/network/base/basenetworksession"					file="modules/KickAFriend.lua"				/>

		<!-- Auto Apply Weapon Skills -->
		<hook source_file="lib/managers/weaponskillsmanager"					file="modules/AutoApplyWeaponSkills.lua"	/>

	</hooks>

	<keybinds>

		<!-- Restart Hotkey -->
		<keybind keybind_id="wolfganghud_restart_hotkey"
				name="wolfganghud_restart_hotkey_title"
				localized="true"
				run_in_menu="false"
				run_in_game="true"
				run_in_paused_game="true"
				script_path="keybinds/RestartHotkey.lua" />

	</keybinds>

</table>