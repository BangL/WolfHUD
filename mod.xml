<table name="WolfgangHUD"
		description="This is a Mod Collection of HUD altering scripts, as well as quality of life changes to the game and its menus."
		merge_global="false"
		author="BangL"
		priority="1"
		version="0.1"
		cannot_be_disabled="false"
		early_init="false">
	<hooks>

		<!-- Core -->
		<hook source_file="lib/entry"											file="Core.lua"				type="pre"	/>
		<hook source_file="lib/managers/menu/menucomponentmanager"				file="WolfgangHUDMenu.lua"				/>

		<!-- KillCounter -->
		<hook source_file="lib/managers/hudmanagerpd2"							file="lua/KillCounter.lua"				/>
		<hook source_file="lib/managers/raidjobmanager"							file="lua/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammatebase"					file="lua/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammateai"						file="lua/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammatepeer"					file="lua/KillCounter.lua"				/>
		<hook source_file="lib/managers/hud/hudteammateplayer"					file="lua/KillCounter.lua"				/>
		<hook source_file="lib/units/enemies/cop/copdamage"						file="lua/KillCounter.lua"				/>
		<hook source_file="lib/units/equipment/sentry_gun/sentrygunbase"		file="lua/KillCounter.lua"				/>

		<!-- Accuracy -->
		<hook source_file="lib/managers/hudmanagerpd2"							file="lua/Accuracy.lua"					/>
		<hook source_file="lib/managers/raidjobmanager"							file="lua/Accuracy.lua"					/>
		<hook source_file="lib/managers/statisticsmanager"						file="lua/Accuracy.lua"					/>
		<hook source_file="lib/managers/hud/hudteammateplayer"					file="lua/Accuracy.lua"					/>

		<!-- NoSlowMo -->
		<hook source_file="lib/tweak_data/timespeedeffecttweakdata"				file="lua/NoSlowMo.lua"					/>

		<!-- Transparent Pause Menu -->
		<hook source_file="lib/managers/menu/raid_menu/raidmenuscenemanager"	file="lua/TransparentPauseMenu.lua"		/>

		<!-- Bot Bullet Collisions -->
		<hook source_file="lib/units/weapons/raycastweaponbase"					file="lua/BotColl.lua"					/>

		<!-- Auto Reload -->
		<hook source_file="lib/units/beings/player/states/playerstandard"		file="lua/AutoReload.lua"				/>

		<!-- Straight To Main Menu -->
		<hook source_file="lib/setups/menusetup"								file="lua/StraightToMainMenu.lua"		/>
		<hook source_file="lib/states/menutitlescreenstate"						file="lua/StraightToMainMenu.lua"		/>

		<!-- Instant Restart -->
		<hook source_file="lib/tweak_data/tweakdata"							file="lua/InstantRestart.lua"		/>

	</hooks>
	<keybinds>
		<keybind
				keybind_id="wolfganghud_restart_hotkey"
				name="wolfganghud_restart_hotkey_title"
				localized="true"
				run_in_menu="false"
				run_in_game="true"
				run_in_paused_game="true"
				script_path="lua/RestartHotkey.lua"
		/>
	</keybinds>
</table>